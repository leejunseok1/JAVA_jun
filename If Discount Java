import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int a = 0;  // 물건 개수
		a = sc.nextInt(); // 값 넣어주기
		int x = 5000*a; // 물건 가격 
		
		if (a >=100) {
			System.out.println(x- x*12/100); // 0.1을 곱해주게 되면 double값이 나오게 되니 인트형으로 출력되게
		}
		else if (a >=10) {
			System.out.println(x-x/10);
		}
	}

}
